{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "/opt/*": ["src/dependencies/*"],
      "@graphql-tools/*": ["src/dependencies/nodejs/node_modules/@graphql-tools/*"],
      "dayjs": ["src/dependencies/nodejs/node_modules/dayjs"],
      "dayjs/*": ["src/dependencies/nodejs/node_modules/dayjs/*"],
      "mongodb": ["src/dependencies/nodejs/node_modules/mongodb"],
      "apollo-datasource": ["src/dependencies/nodejs/node_modules/apollo-datasource"],
      "apollo-datasource-rest": ["src/dependencies/nodejs/node_modules/apollo-datasource-rest"],
      "graphql-middleware": ["src/dependencies/nodejs/node_modules/graphql-middleware"],
      "apollo-server-core": ["src/dependencies/nodejs/node_modules/apollo-server-core"],
      "apollo-server-lambda": ["src/dependencies/nodejs/node_modules/apollo-server-lambda"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".aws-sam",
    ".husky",
    ".vscode",
    "cicd",
    "configs",
    "coverage",
    "devlab_scripts",
    "docs",
    "events",
    "patches",
    "build"
  ]
}