{
  "name": "simple-websocket",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "delete:build": "rm -rf dist",
    "start": "npm-run-all -s delete:build graphql:gen build:esbuild copy:schemas update:modules copy:modules start:parallel",
    "start:parallel": "npm-run-all -p sam:local watch",
    "sam:local": "sam local start-api --warm-containers EAGER --template template.yaml --host 0.0.0.0 --env-vars env.json --port 3000",
    "watch": "npm-watch",
    "build:tsc": "tsc --outDir dist",
    "build:esbuild": "scripts/build.js",
    "format:dist": "eslint dist/**/*.js --fix",
    "format:src": "eslint src/**/*.ts --fix",
    "copy:schemas": "cp -R src/graphql/schemas dist/graphql/schemas",
    "copy:modules": "cp -R src/dependencies/nodejs dist/dependencies/nodejs",
    "graphql:gen": "graphql-codegen --config codegen.yml",
    "watch:build": "npm-run-all -s graphql:gen build:esbuild copy:schemas",
    "update:modules": "scripts/update.sh",
    "cicd:test": "scripts/test.sh",
    "cicd:build": "scripts/build.sh",
    "cicd:deploy": "scripts/deploy.sh",
    "cicd:delete": "scripts/delete.sh",
    "cicd:publish": "npm-run-all -s cicd:test cicd:build cicd:deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.72.0",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.13",
    "@shelf/jest-mongodb": "^2.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/aws-lambda": "^8.10.93",
    "@types/aws-sdk": "^2.7.0",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.27.1",
    "apollo-server-lambda": "^3.6.7",
    "apollo-server-testing": "^2.25.3",
    "axios": "^0.26.1",
    "dayjs": "^1.11.1",
    "esbuild": "^0.14.23",
    "eslint": "^8.10.0",
    "graphql": "^15.0.0",
    "graphql-middleware": "^6.1.22",
    "jest": "^27.5.1",
    "jwk-to-pem": "^2.0.5",
    "mockdate": "^3.0.5",
    "mongodb": "^4.7.0",
    "node-mocks-http": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "otplib": "^12.0.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.2"
  },
  "watch": {
    "watch:build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  }
}
