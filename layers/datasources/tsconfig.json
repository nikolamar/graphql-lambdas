{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"es2015",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/opt/utils/*": ["../../layers/utils/utils/*"],
      "/opt/configs/*": ["../../layers/configs/configs/*"],
      "/opt/plugins/*": ["../../layers/plugins/plugins/*"],
      "/opt/schemas/*": ["../../layers/schemas/schemas/*"],
      "mongodb": ["../../layers/nodejs/nodejs/node_modules/mongodb"],
      "apollo-datasource": ["../../layers/nodejs/nodejs/node_modules/apollo-datasource"],
      "apollo-server-lambda": ["../../layers/nodejs/nodejs/node_modules/apollo-server-lambda"]
    }
  },
  "exclude": ["node_modules"]
}