{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"es2015",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/opt/utils/*": ["../../layers/utils/utils/*"],
      "/opt/configs/*": ["../../layers/configs/configs/*"],
      "/opt/datasources/*": ["../../layers/datasources/datasources/*"],
      "dataloader": ["../../layers/nodejs/nodejs/node_modules/dataloader"],
      "mongodb": ["../../layers/nodejs/nodejs/node_modules/mongodb"],
    }
  },
  "exclude": ["node_modules"]
}