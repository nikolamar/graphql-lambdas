{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"es2015",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/opt/utils/*": ["../../layers/utils/utils/*"],
      "/opt/configs/*": ["../../layers/configs/configs/*"],
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}